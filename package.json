{
  "name": "@typespec/asyncapi",
  "version": "0.1.0",
  "description": "TypeSpec emitter for AsyncAPI 3.0 specifications",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "tspMain": "lib/main.tsp",
  "typespec": {
    "emitter": true
  },
  "keywords": [
    "typespec",
    "asyncapi",
    "emitter",
    "event-driven",
    "api"
  ],
  "author": "TypeSpec AsyncAPI Team",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:validation": "bun test test/critical-validation.test.ts test/all-generated-specs-validation.test.ts",
    "test:asyncapi": "bun test test/validation/",
    "clean": "rm -rf dist/",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "dev": "bun run --watch src/index.ts"
  },
  "files": [
    "dist/",
    "lib/",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@typespec/compiler": "^1.3.0",
    "@typespec/versioning": "workspace:^"
  },
  "peerDependenciesMeta": {
    "@typespec/versioning": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "glob": "^11.0.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@effect/schema": "^0.75.5",
    "@typespec/asset-emitter": "^0.73.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "effect": "^3.17.9",
    "yaml": "^2.8.1"
  }
}
